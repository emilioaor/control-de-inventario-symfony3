{% extends 'CoreBundle:Templates:base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block titleMain %}{{ product.name }}{% endblock %}

{% block position %}

    {% include 'CoreBundle:Templates:position.html.twig' with {
        positions : [
            {
                title : 'Productos',
                route : 'product.index',
                icon  : icon.ICON_PRODUCT
            },
            {
                title : product.name,
                route : '',
                icon  : icon.ICON_PRODUCT
            }
        ]
    } %}

{% endblock %}

{% block body %}

    <div class="row">

        <div class="col-sm-4 form-group">

            <label>Código</label>
            <p>{{ product.code }}</p>
        </div>

        <div class="col-sm-4 form-group">

            <label>Nombre</label>
            <p>{{ product.name }}</p>
        </div>

        <div class="col-sm-4 form-group">

            <label>Descripción</label>
            <p>{{ product.description }}</p>
        </div>

    </div>

    <div class="row">

        <div class="col-sm-4 form-group">

            <label>Precio</label>
            <p>{{ product.price }}</p>
        </div>

        <div class="col-sm-4 form-group">

            <label>Stock minimo</label>
            <p>{{ product.stockMinimum }}</p>
        </div>

        <div class="col-sm-4 form-group">

            <label>Stock maximo</label>
            <p>{{ product.stockMaximum }}</p>
        </div>

    </div>

    <div class="row">

        <div class="col-sm-4 form-group">

            <label>Costo minimo</label>
            <p>{{ product.costMinimum }}</p>
        </div>

        <div class="col-sm-4 form-group">

            <label>Costo maximo</label>
            <p>{{ product.costMaximum }}</p>
        </div>

        <div class="col-sm-4 form-group">

            <label>Costo promedio</label>
            <p>{{ product.costAverage }}</p>
        </div>

    </div>

    <div class="row">
        <div class="col-sm-4 form-group">

            <label>Stock(Actual)</label>
            <p>{{ product.stock }}</p>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 form-group">
            <a href="{{ url('product.edit', {id : product.id}) }}" class="btn btn-warning"><span class="{{ icon.ICON_EDIT }}"></span> Editar</a>
        </div>
    </div>

{% endblock %}