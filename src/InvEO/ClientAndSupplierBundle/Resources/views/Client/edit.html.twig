{% extends 'CoreBundle:Templates:base.html.twig' %}

{% block title %}{{ client.name }}{% endblock %}

{% block titleMain %}{{ client.name }}{% endblock %}

{% block position %}

    {% include 'CoreBundle:Templates:position.html.twig' with {
        positions : [
            {
                title : 'Clientes',
                route : 'client.index',
                icon  : icon.ICON_CLIENT
            },
            {
                title : client.name,
                route : '',
                icon  : icon.ICON_CLIENT
            }
        ]
    } %}

{% endblock %}

{% block body %}

    <div class="row">

        <div class="col-xs-12">
            {{ form_errors(form.rif) }}
            {{ form_errors(form.name) }}
            {{ form_errors(form.phone) }}
            {{ form_errors(form.mobile) }}
            {{ form_errors(form.address) }}
        </div>

    </div>

    {{ form_start(form) }}

    <div class="row">

        <div class="col-sm-4 form-group">
            <label for="">CÃ³digo</label>
            <p>{{ client.code }}</p>
        </div>

        <div class="col-sm-4 form-group">
            {{ form_label(form.rif) }}
            {{ form_widget(form.rif) }}
        </div>

        <div class="col-sm-4 form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
        </div>

    </div>

    <div class="row">

        <div class="col-sm-4 form-group">
            {{ form_label(form.phone) }}
            {{ form_widget(form.phone) }}
        </div>

        <div class="col-sm-4 form-group">
            {{ form_label(form.mobile) }}
            {{ form_widget(form.mobile) }}
        </div>

        <div class="col-sm-4 form-group">
            {{ form_label(form.address) }}
            {{ form_widget(form.address) }}
        </div>

    </div>

    <div class="row">
        <div class="col-xs-12 form-group">
            <button class="btn btn-success"><span class="{{ icon.ICON_SAVE }}"></span> Registrar</button>
            <a href="{{ url('client.show', {id : client.id}) }}" class="btn btn-primary"><span class="{{ icon.ICON_CLIENT }}"></span> Ver cliente</a>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}